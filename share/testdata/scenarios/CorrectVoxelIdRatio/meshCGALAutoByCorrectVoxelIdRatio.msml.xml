<msml:msml xmlns:msml="http://sfb125.de/msml"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://sfb125.de/msml">

    <variables>
        <var name="input_vol_mesh" value="vertebra.vtk" logical="VolumeMesh" />
        <var name="input_image" value="vertebra.vti" logical="SegmentationImage3D"
             physical="file.vti"/>
		
    </variables>

    <workflow>   
    	<meshCGALAutoByCorrectVoxelIdRatio meshFilename="${input_vol_mesh}" image="${input_image}" size="20" voxelIdRatio="0.98" tolerance="1e-10"/>
    </workflow>


    <environment>
        <solver linearSolver="iterativeCG" processingUnit="CPU"
                timeIntegration="dynamicImplicitEuler"/>
        <simulation>
            <step name="initial" dt="0.05" iterations="100"/>
        </simulation>
    </environment>

</msml:msml>