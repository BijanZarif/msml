<?xml version="1.0" encoding="UTF-8"?>
<msml:operator xmlns:msml="http://sfb125.de/msml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://sfb125.de/msml" name="boxROIToIndexOperator">

    <runtime>
        <python module="msml.ext.misc"
                function="computeIndicesFromBoxROI"/>
    </runtime>

    <input>
        <arg name="mesh"
             logical="linearTetMesh, quadraticTetMesh"
             physical="file.vtk"/>
        <!--
        <arg name="meshB"
             logical="linearTetMesh, quadraticTetMesh"
             physical="file.vtk"/>
             -->
    </input>

    <output>
        <arg name="indices"
             logical="indexgroup"
             physical="vector.int"/>
    </output>

    <parameters>
        <arg name="box" physical="vector.float"/>
        <arg name="select" physical="string"/>
    </parameters>


</msml:operator>
