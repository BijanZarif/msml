{%macro bcentry(data, entry_name, number_field, points_field, vector_field) %}
{% if data -%}
        <{{entry_name}}>
            <{{number_field}}>{{data.num}}</{{number_field}}>
            <{{points_field}}>
                {{data.points}}</{{points_field}}>
            <{{vector_field}}>
                {{data.vectors}}</{{vector_field}}>
        </{{entry_name}}>
{%- endif %}
{% endmacro %}
<Param>
  <BCData>
{{bcentry(fc,
    "FixedConstraintsBCs",
    "NumberOfFixedDirichletPoints",
    "fDPoints",
    "fDisplacements")}}

{{bcentry(dc,
     "DisplacementConstraintsBCs",
    "NumberOfDisplacedDirichletPoints",
    "dDPoints",
    "dDisplacements")}}

{{bcentry(dc,
    "ForceOrPressureBCs",
    "NumberOfForceOrPressureBCPoints",
    "ForceOrPressureBCPoints",
    "ForcesOrPressures")}}
  </BCData>
</Param>
