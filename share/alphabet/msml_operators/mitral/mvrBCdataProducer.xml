<msml:operator xmlns:msml="http://sfb125.de/msml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://sfb125.de/msml" name="mvrBCdataProducer">

    <runtime>
        <python module="msml.ext.mitral" function="bcdata_producer"/>
    </runtime>

    <input>
        <arg name="volumeMesh" logical="Mesh" physical="vtu">
        </arg>
        <arg name="surfaceMesh" logical="TriangularSurface" physical="vtp">
        </arg>
        <arg name="ring" logical="object" physical="vtp">
        </arg>
    </input>

    <output>
        <arg name="points" logical="object" physical="vector.float"/>
        <arg name="displacements" logical="object" physical="vector.float"/>
    </output>

    <parameters>
        <arg name="outputFilename" target="true" optional="true"
             default="dbcdata.xml"
             logical="object" physical="string">
        </arg>
    </parameters>

</msml:operator>
