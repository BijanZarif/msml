<msml:msml xmlns:msml="http://sfb125.de/msml"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://sfb125.de/msml">

    <variables>
        <var name="input_vol_surf_mesh" value="3Dircadb0101Mesh_combo.vtk" logical="str"/>
        <var name="input_vol_mesh" value="3Dircadb0101MeshTets.vtk" logical="str"/>
        <var name="viz_vol_mesh" value="3Dircadb0101MeshTets_viz.vtk" logical="str"/>    
        <var name="input_image" value="3Dircadb0101Labeled.vti" logical="segmentationImage"
             physical="file.vti"/>
        <var name="viz_input_vol_surf_mesh" value="3Dircadb0101Mesh_combo_viz.vtk" logical="str"/>

    </variables>

    <scene>
        <object id="bunny">
            <mesh>
                <linearTet id="bunnyMesh" mesh="${SurfaceExtractor}"/>
            </mesh>

            <sets>
                <nodes>
                    <indexgroup id="constraintRegion" indices="${bottomToIndexGroup}"/>
                </nodes>
                <elements>
                    <indexgroup id="bodyRegion" indices="${bodyToIndexGroup}"/>
                </elements>
                <surfaces>
                    <indexgroup id="constraintRegionSurfaces" indices="${pressureIndexGroup}"/>
                </surfaces>
            </sets>

            <material>
                <region id="Material" indices="${bodyToIndexGroup}">
                    <linearElasticMaterial youngModulus="80000" poissonRatio="0.35"/>
                    <mass name="abc" massDensity="0.001"/>
                </region>
            </material>

            <constraints>
                <constraint name="test" forStep="${initial}">
                    <fixedConstraint name="bodyConstraint" indices="${bottomToIndexGroup}" />
                    <surfacePressure name="pressureConstraint" indices="${pressureIndexGroup}" pressure="-8000" />
                </constraint>
            </constraints>

            <output>
                <displacement id="disp" timestep="1" useAsterisk="true" />
            </output>
        </object>
    </scene>

    <workflow>    
        <CGALMeshVolumeFromVoxels id="VolumeMesher" meshFilename="${input_vol_mesh}" image="${input_image}" 
					facetAngle="20" facetSize="12" facetDistance="12" cellRadiusEdgeRatio="3" cellSize="30" odt="false" lloyd="false"  pertube="false" exude="false" />
        <ExtractAllSurfacesByMaterial id="SurfaceExtractor" meshIn="${VolumeMesher}" meshOutFilename="${input_vol_surf_mesh}" cut="false"/>      
        <ComputeIndicesFromBoxROI id="bodyToIndexGroup"
                               box="-10 -10 -10 300 300 300" mesh="${SurfaceExtractor}"
                               select="elements"/>

        <ComputeIndicesFromBoxROI id="bottomToIndexGroup"
                               box="-10 250 -10 300 300 300" mesh="${SurfaceExtractor}"
                               select="points"/>
        <computeIndicesFromMaterialId id="pressureIndexGroup" num="193" mesh="${SurfaceExtractor}" type="faces" />

        <CGALMeshVolumeFromVoxels id="VizVolumeMesher" meshFilename="${viz_vol_mesh}" image="${input_image}" facetAngle="20" facetSize="5" facetDistance="12" cellRadiusEdgeRatio="3" cellSize="30" odt="false" lloyd="false"  pertube="false" exude="false" />
        <ExtractAllSurfacesByMaterial id="VizSurfaceExtractor" meshIn="${VizVolumeMesher}" meshOutFilename="${viz_input_vol_surf_mesh}" cut="false"/>   
        <TransformMeshBarycentric id="deformed_surface" referenceGrid="${VolumeMesher}" out_surface_filename="viz*.vtk" mesh="${VizSurfaceExtractor}" deformedGrid="${disp}" />
    </workflow>


    <environment>
        <solver linearSolver="iterativeCG" processingUnit="CPU"
                timeIntegration="dynamicImplicitEuler"/>
        <simulation>
            <step name="initial" dt="0.05" iterations="100"/>
        </simulation>
    </environment>

</msml:msml>