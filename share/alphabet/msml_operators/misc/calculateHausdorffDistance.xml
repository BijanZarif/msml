<msml:operator xmlns:msml="http://sfb125.de/msml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://sfb125.de/msml" name="calculateHausdorffDistance">
    <meta key="doc">
        Calculates Hausdorff-Distance between two meshes   
    </meta>
    <runtime>
        <python module="msml.ext.misc" function="calculateHausdorffDistance" />
    </runtime>

  	<output>
        <arg name="hausdorffDistance"  physical="float"/>
    </output>


    <input>
        <arg name="input_mesh1" logical="SurfaceMesh" physical="file.vtk">		
			<meta key="doc">
                Filename of mesh1.
            </meta>
		</arg>
        <arg name="input_mesh2" logical="SurfaceMesh" physical="file.vtk">		
			<meta key="doc">
                Filename of mesh2.
            </meta>
		</arg>		
    </input>
    
    <parameters>
        <arg name="points" physical="bool" optional="true" default="false">
            <meta key="doc">
             	Takes points instead of cells for comparison.   
            </meta>
        </arg>
    </parameters>
</msml:operator>