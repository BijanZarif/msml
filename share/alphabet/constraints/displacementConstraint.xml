<msml:element xmlns:msml="http://sfb125.de/msml"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://sfb125.de/msml" name="displacementConstraint" category="constraint"
              quantity="single">


    <description>
        Set (fix) displaced points
    </description>

    <parameters>
        <arg name="time" physical="float">
            <meta key="doc" value="Set time."/>
        </arg>
        <arg name="indices" physical="vector.float">
            <meta key="doc" value="Set indices of displaced points separated by spaces."/>
        </arg>
        <arg name="displacement" physical="vector.float">
            <meta key="doc" value="Set the displacement vector (DIM = 3) of the points given in the indices."/>
        </arg>
    </parameters>
</msml:element>




