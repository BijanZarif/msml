<msml:element xmlns:msml="http://sfb125.de/msml"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://sfb125.de/msml" name="surfacePressure" category="constraint"
              quantity="single">


    <description>
        Add pressure load to surface
    </description>


    <parameters>
        <arg name="time" physical="int">
            <meta key="doc" value="Set time  "/>
        </arg>

        <arg name="indices" physical="int">
            <meta key="doc" value="Set indices of fixed points separated by spaces."/>
        </arg>

        <arg name="pressure" physical="int">
            <meta key="doc" value="	State the pressure of the triangle."/>
        </arg>

    </parameters>

</msml:element>
