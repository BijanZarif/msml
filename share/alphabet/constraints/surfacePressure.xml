<msml:element xmlns:msml="http://sfb125.de/msml"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://sfb125.de/msml" name="surfacePressure" category="constraint"
              quantity="single">


    <description>
        Add pressure load to surface
    </description>


    <parameters>
        <arg name="time" physical="float">
            <meta key="doc" value="Set time."/>
        </arg>

        <arg name="indices" physical="vector.float">
            <meta key="doc" value="Set indices of points where force/pressure acts separated by spaces."/>
        </arg>

        <arg name="pressure" physical="float">
            <meta key="doc" value="Set force/pressure (which acts orthogonally) on the facets. Note: not a vector. T.b. changed?!"/>
        </arg>

    </parameters>

</msml:element>
