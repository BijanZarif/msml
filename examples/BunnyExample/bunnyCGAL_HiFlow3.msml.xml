<msml:msml xmlns:msml="http://sfb125.de/msml"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://sfb125.de/msml">

    <variables>
        <var name="input_vol_mesh" value="bunnyVolumeMeshCGAL.vtk" logical="Mesh"
             physical="file.vtk"/>
        <var name="input_surf_mesh" value="Bunny6000Surface.vtk" logical="linearMesh"
             physical="file.vtk"/>
    </variables>

    <scene>
        <object id="bunny">
            <mesh>
                <linearTet id="bunnyMesh" mesh="${bunnyVolumeMesher}"/>
            </mesh>

            <sets>
                <nodes>
                    <indexgroup id="constraintRegion1" indices="${bottomToIndexGroup}"/>
                    <indexgroup id="constraintRegion2" indices="${earsToIndexGroup}"/>
                </nodes>
                <elements>
                    <indexgroup id="bodyRegion" indices="${bodyToIndexGroup}"/>
                </elements>
                <surfaces>
                    <indexgroup id="constraintRegionSurfaces1" indices="${bottomToIndexGroup}"/>
                    <indexgroup id="constraintRegionSurfaces2" indices="${earsToIndexGroup}"/>
                </surfaces>
            </sets>

            <material>
                <region id="bunnyMaterial" indices="${bodyToIndexGroup}">
                    <linearElasticMaterial youngModulus="4166" poissonRatio="0.488"/> <!-- soft tissue e.g. in heart leaflets -->
                    <mass name="stdMass" massDensity="1000"/>
                </region>
            </material>

            <constraints>
                <constraint name="bodyConstraint" forStep="${initial}">
                    <fixedConstraint time="0" indices="${bottomToIndexGroup}"/>
                    <fixedConstraint time="0" indices="${earsToIndexGroup}"/> <!-- displacementConstraint displacement="{0.0, 0.2, 0.0}"/> -->
                </constraint>
            </constraints>

            <output>
                <displacement id="liver" timestep="1"/>
            </output>
        </object>
    </scene>

    <workflow>

        <mesherCGALs2v id="bunnyVolumeMesher" meshFilename="${input_vol_mesh}" surfaceMesh="${input_surf_mesh}"
                       preserveFeatures="false" facet_angle="20" facet_size="0.008" facet_distance="0.005"
                       cell_radius_edge_ratio="3" cell_size="0.02" odt="false" lloyd="false" pertube="false"
                       exude="false"/>

        <boxROIToIndexOperator id="bodyToIndexGroup"
                               box="-0.1 -0.03 -0.07 0.06 0.19 0.06" mesh="${bunnyVolumeMesher}"
                               select="elements"/>

        <boxROIToIndexOperator id="bottomToIndexGroup"
                               box="-0.1 0.03 -0.07 0.07 0.035 0.06" mesh="${bunnyVolumeMesher}"
                               select="points"/>
                               
        <boxROIToIndexOperator id="earsToIndexGroup"
                               box="-0.1 0.165 -0.07 0.06 0.19 0.06" mesh="${bunnyVolumeMesher}"
                               select="points"/>
                               
    </workflow>

    <environment>
        <solver linearSolver="CG" preconditioner="SGAUSS_SEIDEL" processingUnit="CPU"
                timeIntegration="Newmark" dampingRayleighRatioMass="0.3" dampingRayleighRatioStiffness="0.4"/>
        <simulation>
            <step name="initial" dt="0.05" iterations="20"/>
        </simulation>
    </environment>

</msml:msml>
