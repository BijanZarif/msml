<msml:msml xmlns:msml="http://sfb125.de/msml"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://sfb125.de/msml">

    <variables>
        <var name="input_vol_mesh" value="3Dircadb0101Labeled.vtk" type="linearMesh"
             format="file.vtk"/>
        <var name="input_image" value="3Dircadb0101Labeled.vti" type="linearMesh"
             format="file.vtk"/>
    </variables>

    <scene>
        <object id="bunny">
            <mesh>
                <linearTet id="bunnyMesh" mesh="${VolumeMesher}"/>
            </mesh>

            <sets>
                <nodes>
                    <indexgroup id="constraintRegion" indices="${bottomToIndexGroup}"/>
                </nodes>
                <elements>
                    <indexgroup id="bodyRegion" indices="${bodyToIndexGroup}"/>
                </elements>
                <surfaces>
                    <indexgroup id="constraintRegionSurfaces" indices="${bottomToIndexGroup}"/>
                </surfaces>
            </sets>

            <material>
                <region id="Material">
                    <!--<materialRegion name=""> -->
                    <indexgroup indices="${bodyToIndexGroup}"/>
                    <linearElastic youngModulus="80000" poissonRatio="0.49"/>
                    <mass density="0.10"/>
                </region>
            </material>

            <constraints>
		<fixedConstraint name="bodyConstraint" forStep="${initial}" indices="${bottomToIndexGroup}" />               
            </constraints>

            <output>
                <displacement id="disp01" timestep="1"/>
            </output>
        </object>
    </scene>

    <workflow>    
                      
         <mesherCGALi2v id="VolumeMesher" meshFilename="${input_vol_mesh}" image="${input_image}" 
					facet_angle="20" facet_size="12" facet_distance="12" cell_radius_edge_ratio="3" cell_size="30" odt="false" lloyd="false"  pertube="false" exude="false" />

        <boxROIToIndexOperator id="bodyToIndexGroup"
                               box="-10 -10 -10 300 300 300" mesh="${VolumeMesher}"
                               select="elements"/>

        <boxROIToIndexOperator id="bottomToIndexGroup"
                               box="-10 250 -10 300 300 300" mesh="${VolumeMesher}"
                               select="points"/>
    </workflow>


    <environment>
        <solver linearSolver="iterativeCG" processingUnit="CPU"
                timeIntegration="dynamicImplicitEuler"/>
        <simulation>
            <step name="initial" dt="0.05" iterations="100"/>
        </simulation>
    </environment>

</msml:msml>