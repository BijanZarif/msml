<?xml version="1.0" encoding="UTF-8"?>
<msml:operator xmlns:msml="http://sfb125.de/msml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://sfb125.de/msml" name="colormesh">
    <runtime>
        <python module="msml.ext.misc"
                function="colorMeshOperator"/>
    </runtime>

    <input>
        <arg name="mesh"
             type="linearTetMesh, quadraticTetMesh"
             format="file.vtk"/>

        <arg name="coloredMesh"
             type="triangularMesh"
             format="file.vtk"/>
    </input>

    <output>
        <arg name="coloredMesh"
             type="triangularMesh"
             format="file.vtk"/>
    </output>

</msml:operator>
