<?xml version="1.0" encoding="UTF-8"?>
<msml:operator xmlns:msml="http://sfb125.de/msml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://sfb125.de/msml" name="colormesh">
    <runtime>
        <python module="msml.ext.misc"
                function="ColorMeshPython"/>
    </runtime>

    <annotation>
        <entry key="check.output" value="True" />
        <entry key="check.output.arguments" value="mesh"/>
        <entry key="check.output.generated" value="coloredMesh"/>

        <entry key="filename-generator" value="True" />
        <entry key="filename-generator.for" value="coloredMesh" />
        <entry key="filename-generator.for.coloredMesh" value="{mesh}_colored.vtk" />
    </annotation>

    <input>
        <arg name="mesh"
             logical="Mesh"
             physical="vtk"/>
    </input>

    <output>
        <arg name="coloredMesh"
             logical="triangularMesh"
             physical="vtk"/>
    </output>

    <parameters>
        <arg name="coloredMesh"
             physical="str"/>
    </parameters>
</msml:operator>
