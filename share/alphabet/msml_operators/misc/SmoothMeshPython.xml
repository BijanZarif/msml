<?xml version="1.0" encoding="UTF-8"?>
<msml:operator xmlns:msml="http://sfb125.de/msml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sfb125.de/msml" name="SmoothMeshPython">
	<runtime>
		<python module="msml.ext.misc" function="SmoothMeshPython" />
	</runtime>
	<input>
		<arg name="mesh" logical="volumeMesh" physical="file.vtk" />
	</input>
	<parameters>
		<arg name="surfaceMeshFilename" physical="str"  />	
		<arg name="iterations" physical="int"/>
		<arg name="feature_angle" physical="float" />
		<arg name="pass_band" physical="float" />
		<arg name="boundary_smoothing" physical="bool" />
		<arg name="feature_edge_smoothing" physical="bool" />
		<arg name="non_manifold_smoothing" physical="bool" />	
		<arg name="normalized_coordinates" physical="bool" />
	</parameters>
	<output>
		<arg name="surfaceOut" logical="surface" physical="file.vtk"/>
	</output>
</msml:operator>

